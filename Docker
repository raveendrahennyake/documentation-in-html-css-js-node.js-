//node 

//Dockerfile

# base image
FROM node:20-alpine

# working directory
WORKDIR /app

# copy the package.json file
COPY package.json .

# install the dependencies
RUN npm install

# copy the files
COPY . .

# run the app
CMD ["npm", "start"]




//Create Containar 

docker run --name node-demos --rm -v ${PWD}/node_modules:/app/node_modules -v ${PWD}:/app -w /app new-demo npm start
